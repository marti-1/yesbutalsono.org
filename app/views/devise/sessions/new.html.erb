<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h2 class="mb-4">Log in</h2>

        <%= render "devise/shared/oauth", action: 'Log in' %>

        <div class="line-with-text mb-3">
          <div>OR</div>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: 'form-label' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="field">
            <%= f.label :password, class: 'form-label' %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field mb-3">
              <%= f.check_box :remember_me, class: 'form-check-input' %>
              <%= f.label :remember_me, class: 'form-check-label' %>
            </div>
          <% end %>

          <div class="actions mb-3 d-grid">
            <%= f.submit "Log in", class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div>
          <small>Don't have an account? <%= link_to "Sign up", new_user_registration_path %></small>
        </div>
      </div>
    </div>
  </div>
</div>