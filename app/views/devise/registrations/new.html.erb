<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">

        <h2 class="mb-4">Sign up</h2>

        <%= render "devise/shared/oauth", action: 'Sign up' %>

        <div class="line-with-text mb-3">
          <div>OR</div>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="field">
            <%= f.label :email, class: 'form-label' %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control #{error_class(resource, :email)}" %>
            <%= error_message(resource, :email) %>
          </div>

          <div class="field mb-3">
            <%= f.label :password, class: 'form-label' %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control #{error_class(resource, :password)}" %>
            <%= error_message(resource, :password) %>
          </div>

          <div class="actions mb-3 d-grid">
            <%= f.submit "Sign up", class: 'btn btn-primary' %>
          </div>
        <% end %>

        <div>
          <small>Already have an account? <%= link_to "Log in", new_user_session_path %></small>
        </div>
      </div>
    </div>
  </div>
</div>