<ul class="nav nav-underline mb-3">
  <li class="nav-item">
    <%= link_to 'Profile', user_path(current_user), class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to 'Settings', edit_user_registration_path, class: 'nav-link active' %>
  </li>
</ul>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="field mb-3">
    <%= f.label :username, class: 'form-label' %><br />
    <%= f.text_field :username, autocomplete: "username", class: "form-control #{error_class(@user, :username)}" %>
    <%= error_message(@user, :username) %>
  </div>

  <div class="field mb-3">
    <%= f.label :bio, class: 'form-label' %><br />
    <%= f.text_area :bio, class: "form-control #{error_class(@user, :bio)}" %>
    <%= error_message(@user, :bio) %>
  </div>

  <div class="field mb-3">
    <%= f.label :email, class: 'form-label' %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control #{error_class(@user, :email)}" %>
    <%= error_message(@user, :email) %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field mb-3">
    <%= f.label :password, class: 'form-label' %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, class: "form-control #{error_class(@user, :password)}" %>
    <% if @minimum_password_length %>
      <small><%= @minimum_password_length %> characters minimum</small>
    <% end %>
    <%= error_message(@user, :email) %>
  </div>
  <div class="field mb-3">
    <%= f.label :current_password, class: 'form-label' %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, class: "form-control #{error_class(@user, :current_password)}" %>
    <%= error_message(@user, :current_password) %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-primary' %>
  </div>
<% end %>

